{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    { "src": "api/fires.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/api/fires$", "dest": "api/fires.js" },
    { "src": "^/api/update-fires$", "dest": "api/fires.js" }
  ],
  "crons": [
    { "path": "/api/update-fires", "schedule": "0 19 * * *" }
  ]
}
